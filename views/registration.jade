extends layout

block content
	.container
		.hero-unit
			form#login(action="/registration/", method="post")
				p
					label
						span Login
						input(type="text", name="login")
				p
					label
						span Password
							input(type="password", name="password")

				p
					label
						span Confirm password
							input(type="password", name="password")

				p
					input.btn.btn-primary.btn-large(type="submit")	Register
